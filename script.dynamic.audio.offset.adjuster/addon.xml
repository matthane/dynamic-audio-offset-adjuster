<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.dynamic.audio.offset.adjuster" version="1.0.0" name="Dynamic Audio Offset Adjuster" provider-name="TheShoxter">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="script.audio_offset.py">
        <provides>service</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Dynamically adjusts audio offset based on video and audio stream format</summary>
        <description>This service add-on dynamically adjusts the audio offset to user configured values based on the currently playing video and audio stream format.</description>
        <language>en</language>
        <platform>all</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
